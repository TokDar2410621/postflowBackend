# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-django
USE_SQLITE=False

# Database (Railway will auto-provide DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Allowed Hosts (comma-separated, add your Railway domain)
ALLOWED_HOSTS=localhost,127.0.0.1,your-app.railway.app

# CORS Origins (comma-separated, add your Vercel domain)
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:8080

# CSRF Trusted Origins (comma-separated, add your Vercel domain)
CSRF_TRUSTED_ORIGINS=https://your-app.vercel.app,http://localhost:8080

# Frontend URL (your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# Anthropic API (Required)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# LinkedIn OAuth (Required for publishing)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-app.railway.app/api/auth/linkedin/callback

# Pexels API (Optional - for stock images)
PEXELS_API_KEY=your-pexels-api-key

# Google AI Gemini (Optional - for AI image generation)
GOOGLE_API_KEY=your-google-ai-api-key
